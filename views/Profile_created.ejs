<% include ./partials/header.ejs%>
    <div class="profile w-full min-h-screen bg-white pt-1">
        <!-- <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form> -->
        <div class="profdets flex flex-col items-start items-center mt-3">
            <div class="relative">
                <!-- <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 cursor-pointer">
                   <i class="text-zinc-800 ri-pencil-fill"></i>
                </span> -->
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img src="/images/uploads/<%= user.profileImage %>" class="w-full h-full object-cover bg-top">
                </div>
            </div>
            <h1 class=" font-semibold mt-3" id="name"><%= user.name %></h1>
            <div class="flex items-center">
                <img src="/images/username.png" alt="">
                <h3 class="text-md ml-[5px]" id="Uname" ><%= user.username %></h3>
            </div>
            <p style="color: #232323; margin-top: 5px;"><%= user.bio %></p>
            <div class="w-full flex items-center justify-center">
                <% if(user.followers.lenght>1) { %>
                    <h3 class="follow"><%= user.followers.length%> Followers</h3>
                <% } else { %>
                    <h3 class="follow"><%= user.followers.length%> Followers</h3>
                <% } %>

                <p class="text-lg ml-[3px] mr-[3px] text-black">.</p>

                <% if(user.followings.length>1) { %>
                    <h3 class="follow"><%= user.followings.length%> followings</h3>
                <% } else { %>
                    <h3 class="follow"><%= user.followings.length%> following</h3>
                <% } %>
            </div>
            <a href="/settings/edit" class="edit mt-3 px-7 py-3 rounded-full">Edit Profile</a>
            <!-- <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-7">Add New Post</a> -->
        </div>
        <div class="w-full flex items-center justify-center mt-[40px]">
            <div class="w-[260px] h-16 flex items-center justify-center  gap-10">
                <a href="/profile/_created" class="saved-post px-0 save py-1">Created</a>
                <a href="/profile/_saved" class=" py-1 px-3 rounded-md saved-post saved">Saved</a>
            </div>
        </div>
        <div class="card flex flex-wrap gap-10 px-10 mt-10">
            <% if(user.posts.length > 0)  { %>
                    <div class="card">
                        <div class="w-52 h-40 bg-zinc-200 rounded-lg px-10 overflow-hidden">
                            <img class="w-full h-full object-cover bg-cover"
                             src="/images/uploads/<%= user?.posts[0]?.image%>" alt="">
                        </div>
                        <a href="/show/posts" class="inline-block  font-semibold mt-3">Your uploaded pins</a>
                        <h5 class="text-sm font-medium opacity-60"><%= user.posts.length%> Pins</h5>
                    </div>
             <%  } else { %>
                <div class="w-full h-8 flex items-center flex-col justify-center ">
                    <p class="newpost">Nothing to show...yet! Pins you create will live here.</p>
                    <a href="/add" class="px-3 mt-3 pt-3 pb-2 rounded-full" id="createPost">Create Pin</a>
                </div>
             <% } %>
        </div>
    </div>

    <script>
        document.querySelector("#uploadicon").addEventListener("click", function() {
            document.querySelector("#uploadform input").click()
        })

        document.querySelector("#uploadform input").addEventListener("change", function() {
            document.querySelector("#uploadform").submit()
        })
    </script>
<% include ./partials/footer.ejs%>
